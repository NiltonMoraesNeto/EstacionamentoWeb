<h2>Entrada</h2>




<div class="content" style="padding: 10px; width: 1120px">
    <input type="button" name="button" class="btn btnGreen" value="Adicionar Entrada" onclick='javascript: location.href = "@Url.Action("Create", "Entrada")"' />
    <br /><br />
    <table class="table table-striped">
        <tr>
            <th style="text-align:center">
                Nome
            </th>
            <th style="text-align:center">
                Placa
            </th>
            <th style="text-align:center">
                Carro
            </th>
            <th style="text-align:center">
                Servico
            </th>
            <th style="text-align:center">
                Data Entrada
            </th>
            <th style="text-align:center">
                Fechado
            </th>
           <th style="text-align:center">Ações</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Carro)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Servico)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.DataHoraEntrada)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Fechado)
                </td>
                <td style="text-align:center">
                        <a href="@Url.Action("Edit", "Entrada", new { id = item.IdEntrada })" class="btn btn-xs btn-pen tooltipicon" data-title="Editar"><span class="glyphicon glyphicon-pencil"></span></a>
            </tr>
        }
    </table>

</div>

<script>
    $(".tooltipicon").ggtooltip({ textcolor: "#FFF", backcolor: "#3C3C3C", bordercolor: "#3C3C3C", placement: "top" });
</script>