            text-align: center;
            cursor: pointer;
        }

    .tableFiltro td.tdFiltro {
        /*padding: 10px;*/
    }

    div.overlay {
        z-index: 50;
        /*background: rgba(255,255,255,0.7);
            position: absolute;
            width: 350px;
            height: 126px;*/
    }

    div.funil .overlay > .fa, .overlay-wrapper .overlay > .fa {
        position: absolute;
