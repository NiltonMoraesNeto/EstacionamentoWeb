    }

        div.funil input {
            width: 164px;
            /*margin: 6px 0 6px 6px;*/
        }

        div.funil hr {
            border: 0px;
            height: 1px;
            margin: 0px;
            background: #E5E5E5;
        }

        div.funil table {
            font-size: 11pt;
        }

        div.funil div.botDown {
            /*background: #f9e5e5;
